<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:navigationBarColor">@color/notion</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/notionText</item>
    </style>

    <style name="TextStyle.Notice.Small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/notionText</item>
    </style>

    <style name="TextStyle.Home" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/notionText</item>
    </style>
</resources>